<Window x:Class="SeaBattleUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattleUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="277" Width="267" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="textBoxIpAddress" HorizontalAlignment="Left" Height="45" Margin="10,39,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="227" FontFamily="Times New Roman" FontSize="36"/>
        <Button x:Name="buttonCreateClient" Content="Play" HorizontalAlignment="Left" Margin="84,183,0,0" VerticalAlignment="Top" Width="75" Click="buttonCreateClient_Click"/>
        <TextBox x:Name="textBoxRemotePort" HorizontalAlignment="Left" Height="45" Margin="136,119,0,0" TextWrapping="Wrap" Text="4005" VerticalAlignment="Top" Width="80" FontFamily="Times New Roman" FontSize="36" UndoLimit="4" MaxLines="1" MaxLength="4" IsUndoEnabled="True"/>
        <TextBox x:Name="textBoxLocalPort" HorizontalAlignment="Left" Height="45" Margin="10,119,0,0" TextWrapping="Wrap" Text="4004" VerticalAlignment="Top" Width="85" RenderTransformOrigin="-0.762,-1.196" FontSize="36" FontFamily="Times New Roman" UndoLimit="4" MaxLines="1" MaxLength="4"/>
        <Label x:Name="label" Content="IP Address" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Local Port" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Remote Port" HorizontalAlignment="Left" Margin="136,93,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.434,0.788"/>
        <Button x:Name="buttonLocalPortUp" Content="△" HorizontalAlignment="Left" Margin="100,119,0,0" VerticalAlignment="Top" Width="16" Height="20" FontWeight="Bold" Click="buttonLocalPortUp_Click"/>
        <Button x:Name="buttonLocalPortDown" Content="▽" HorizontalAlignment="Left" Margin="100,144,0,0" VerticalAlignment="Top" Width="16" Height="20" FontWeight="Bold" Click="buttonLocalPortDown_Click"/>
        <Button x:Name="buttonRemotePortUp" Content="△" HorizontalAlignment="Left" Margin="221,119,0,0" VerticalAlignment="Top" Width="16" Height="20" FontWeight="Bold" Click="buttonRemotePortUp_Click"/>
        <Button x:Name="buttonRemotePortDown" Content="▽" HorizontalAlignment="Left" Margin="221,144,0,0" VerticalAlignment="Top" Width="16" Height="20" FontWeight="Bold" Click="buttonRemotePortDown_Click"/>
        <Label x:Name="labelReceive" Content="" HorizontalAlignment="Left" Margin="0,208,0,0" VerticalAlignment="Top" Width="249" Height="28" HorizontalContentAlignment="Center"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="84,183,0,0" VerticalAlignment="Top" Width="75" Background="Red" Click="buttonCancel_Click" Visibility="Hidden"/>
    </Grid>
</Window>
